<script>
    $(function () {
        $('#txtDescription').summernote({
            height: 150
        });
        $('#txtRequirement').summernote({
            height: 150
        });
        $('#txtBenefit').summernote({
            height: 150
        });
    })
    function AddJob() {
        var job = {
            Name: $('#txtName').val(),
            Description: $('#txtDescription').summernote('code'),
            Requirement: $('#txtRequirement').summernote('code'),
            Benefits: $('#txtBenefit').summernote('code'),
            Salary: $('#txtSalary').val(),
            FirstTechStack: $('#ddlFirstTechStackChosen :selected').val(),
            SecondTechStack: $('#ddlSecondTechStackChosen :selected').val(),
            ThirdTechStack: $('#ddlThirdTechStackChosen :selected').val(),
            ExpiredDate: $('#txtExpiredDate').val(),
        }
        console.log(job);
        $.ajax({
            type: "POST",
            url: '/JobManagement/CreateJob',
            data: JSON.stringify({ formVM: job }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data.Status == 0) {
                    $('#message-body').text('Register Successfully');
                    $('#modalMessage').modal("show");
                    //window.location.href = '@Url.Action("AccountGridView", "AccountManagement")';
                }
                else {
                    $('#message-summary').html(
                        "<ul style='display:block'>" +
                        "<li><label class='error' style='display: inline-block'>" + data.Message + "</label></li></ul>");
                }
            },
            error: function (data, status) {
                alert(data);
            }
        });
        return false;
    }
</script>

